<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="296dp"
    android:layout_height="370dp"
    android:background="@drawable/shape_dialog_server_add_bg"
    android:paddingTop="18dp">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="编辑标签"
        android:textColor="@color/text_color_899ab6"
        android:textSize="14sp" />


    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/fbl_label_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_round_1d202a"
        android:paddingBottom="15dp"
        android:paddingStart="8dp"
        app:flexWrap="wrap" />


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fbl_label_edit"
        android:layout_marginStart="16dp"
        android:text="我的标签"
        android:textColor="@color/text_color_899ab6"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/tv1">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fbl_label_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:flexWrap="wrap" />

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/tv_ok"
        android:background="@color/line_color_3f4656" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_common_dialog_button"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />
</RelativeLayout>