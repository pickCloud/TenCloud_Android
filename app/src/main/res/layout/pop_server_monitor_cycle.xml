<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_232730"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="132dp"
        android:background="@drawable/shape_round_3f4656_bottom"
        android:orientation="vertical"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_one_hour"
                style="@style/ServerMonitorCycleText"
                android:drawableRight="@drawable/selector_select_tag"
                android:text="1个小时" />

            <ImageView
                android:id="@+id/iv_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_select" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_one_day"
                style="@style/ServerMonitorCycleText"
                android:drawableRight="@drawable/selector_select_tag"
                android:text="24个小时" />

            <ImageView
                android:id="@+id/iv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_select"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_one_week"
                style="@style/ServerMonitorCycleText"
                android:drawableRight="@drawable/selector_select_tag"
                android:text="1周" />

            <ImageView
                android:id="@+id/iv_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_select"
                android:visibility="invisible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_one_month"
                style="@style/ServerMonitorCycleText"
                android:drawableRight="@drawable/selector_select_tag"
                android:text="1个月" />

            <ImageView
                android:id="@+id/iv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_select"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>