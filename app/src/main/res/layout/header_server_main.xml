<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/bg_232730"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_server"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_total" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_total"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="主机总数"
                android:textColor="@color/text_color_556278"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_total"
                android:background="@drawable/selector_server_summary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="0"
                android:textColor="@color/text_color_373e4c"
                android:textSize="11sp" />

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="55dp"
            android:background="@color/line_color_3f4656" />

        <RelativeLayout
            android:id="@+id/rl_cluster"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_cluster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_cluster" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_cluster"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="集群总数"
                android:textColor="@color/text_color_556278"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_cluster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_cluster"
                android:background="@drawable/selector_server_summary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="0"
                android:textColor="@color/text_color_373e4c"
                android:textSize="11sp" />

        </RelativeLayout>


        <View
            android:layout_width="0.5dp"
            android:layout_height="55dp"
            android:background="@color/line_color_3f4656" />

        <RelativeLayout
            android:id="@+id/rl_alarm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_alarm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_alarm"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="安全警告"
                android:textColor="@color/text_color_556278"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_alarm"
                android:background="@drawable/selector_server_summary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="0"
                android:textColor="@color/text_color_373e4c"
                android:textSize="11sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒 / 关注"
            android:textColor="@color/text_color_899ab6"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawablePadding="1dp"
            android:drawableRight="@mipmap/icon_more"
            android:focusable="true"
            android:text="更多"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>