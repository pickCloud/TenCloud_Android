<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <LinearLayout style="@style/ListItemLLFirst">

        <LinearLayout style="@style/ListItemLL2">

            <TextView
                style="@style/ListItemTextKey"
                android:text="集群名称" />

            <EditText
                android:id="@+id/et_name"
                style="@style/ListItemEditValue"
                android:hint="请输入集群名称" />

        </LinearLayout>

        <View style="@style/LineHorizontal2f3543" />

    </LinearLayout>

    <LinearLayout style="@style/ListItemLLFirst">

        <LinearLayout style="@style/ListItemLL2">

            <TextView
                style="@style/ListItemTextKey"
                android:text="节点数量" />

            <EditText
                android:id="@+id/et_ip"
                style="@style/ListItemEditValue"
                android:hint="请输入节点数量"
                android:inputType="number" />

        </LinearLayout>

        <View style="@style/LineHorizontal2f3543" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_type"
        style="@style/ListItemLLFirst">

        <LinearLayout style="@style/ListItemLL2">

            <TextView
                style="@style/ListItemTextKey"
                android:text="集群类型" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:gravity="right"
                android:text="请选择类型"
                android:textColor="@color/text_color_566278"
                android:textSize="14sp" />

        </LinearLayout>

        <View style="@style/LineHorizontal2f3543" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_server"
        style="@style/ListItemLLFirst">

        <LinearLayout style="@style/ListItemLL2">

            <TextView
                style="@style/ListItemTextKey"
                android:text="主机" />

            <TextView
                android:id="@+id/tv_server"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/icon_arrow_right"
                android:gravity="right"
                android:text="请选择类型"
                android:textColor="@color/text_color_566278"
                android:textSize="14sp" />

        </LinearLayout>

        <View style="@style/LineHorizontal2f3543" />

    </LinearLayout>

    <LinearLayout
        style="@style/ListItemLLFirst"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <TextView
                style="@style/ListItemTextKey"
                android:text="描述说明" />

            <EditText
                android:id="@+id/et_user"
                style="@style/ListItemEditValue"
                android:layout_height="100dp"
                android:gravity="top"
                android:hint="请输入说明" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/LineHorizontal2f3543" />

    <Button
        android:id="@+id/btn_create"
        style="@style/ButtonLakeBlue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="确定创建" />

</LinearLayout>
