<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_bg"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:cardBackgroundColor="@color/bg_232730"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="true"
        app:contentPaddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="管理员"
                    android:textColor="@color/select_login_tab"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/selector_template_status"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="预设"
                    android:textColor="@color/default_bg"
                    android:textSize="8sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="功能权限"
                    android:textColor="@color/select_89_56"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_func_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="36"
                    android:textColor="@color/select_login_tab"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项"
                    android:textColor="@color/select_89_56"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/temp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="数据权限"
                    android:textColor="@color/select_89_56"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_data_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="36"
                    android:textColor="@color/select_login_tab"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/temp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项"
                    android:textColor="@color/select_89_56"
                    android:textSize="10sp" />

            </LinearLayout>

            <View
                android:id="@+id/temp5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/selector_tran_48_89" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>