<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_banner_bg"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/selector_banner_bg"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="true"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_deploy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_899ab6"
                android:textSize="14sp"
                tools:text="bootcamp" />

            <TextView
                android:id="@+id/tv_deploy_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/selector_server_status"
                android:drawableStart="@mipmap/icon_detail_green"
                android:drawablePadding="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                tools:text="正常" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_deploy_status"
                android:layout_alignParentEnd="true"
                android:textColor="@color/text_color_566278"
                android:textSize="10sp"
                tools:text="检测状态" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_pod"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关联应用"
                android:textColor="@color/text_color_556278"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="创建时间"
                android:textColor="@color/text_color_556278"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_link_app"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_899ab6"
                android:textSize="10sp"
                tools:text="XXXX" />

            <TextView
                android:id="@+id/tv_create_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_899ab6"
                android:textSize="10sp"
                tools:text="2018-2-15 18：15：12" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

