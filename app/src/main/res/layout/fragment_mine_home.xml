<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@mipmap/bg_user"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/selector_switch_company"
                android:clickable="true"
                android:drawablePadding="2dp"
                android:drawableRight="@mipmap/icon_exchange"
                android:focusable="true"
                android:paddingBottom="1dp"
                android:paddingLeft="6dp"
                android:paddingRight="4dp"
                android:paddingTop="3dp"
                android:text="切换身份"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="82dp">

            <LinearLayout
                android:id="@+id/ll_user_layout"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:visibility="invisible">

                <com.ten.tencloud.widget.CircleImageView
                    android:id="@+id/iv_user_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/icon_userphoto" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_899ab6"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/iv_certification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/icon_idcard_off" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_user_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_556278"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_company_layout"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp"
                android:visibility="invisible">

                <com.ten.tencloud.widget.CircleImageView
                    android:id="@+id/iv_company_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/icon_com_photo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_company_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_899ab6"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/iv_company_certification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/icon_comreg_off" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_company_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:textColor="@color/text_color_556278"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_company_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_556278"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <LinearLayout
        android:id="@+id/ll_role_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48.5dp"
            android:background="@color/bg_232730"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_company"
                style="@style/SettingItemLayout">

                <ImageView
                    style="@style/SettingItemIcon"
                    android:src="@mipmap/icon_company" />

                <TextView
                    style="@style/SettingItemLabel"
                    android:text="我的公司" />

                <TextView
                    android:id="@+id/tv_company_des"
                    style="@style/SettingItemDes"
                    android:text="0家公司" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:background="@color/line_color_2f3543" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_role_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_user_manger"
            android:layout_width="match_parent"
            android:layout_height="48.5dp"
            android:background="@color/bg_232730"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_employee"
                style="@style/SettingItemLayout">

                <ImageView
                    style="@style/SettingItemIcon"
                    android:src="@mipmap/icon_employees" />

                <TextView
                    style="@style/SettingItemLabel"
                    android:text="员工管理" />

                <TextView
                    android:id="@+id/tv_user_manger_des"
                    style="@style/SettingItemDes"
                    android:text="0个员工" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:background="@color/line_color_2f3543" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_template"
            android:layout_width="match_parent"
            android:layout_height="48.5dp"
            android:background="@color/bg_232730"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <LinearLayout style="@style/SettingItemLayout">

                <ImageView
                    style="@style/SettingItemIcon"
                    android:src="@mipmap/icon_template" />

                <TextView
                    style="@style/SettingItemLabel"
                    android:text="权限模版管理" />

                <TextView style="@style/SettingItemDes" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:background="@color/line_color_2f3543" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/SettingItemLayout">

        <ImageView
            android:id="@+id/iv_icon"
            style="@style/SettingItemIcon"
            android:src="@mipmap/icon_service" />

        <TextView
            android:id="@+id/tv_label"
            style="@style/SettingItemLabel"
            android:text="客服服务" />

        <TextView
            android:id="@+id/tv_des"
            style="@style/SettingItemDes" />


        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_arrow_right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting"
        style="@style/SettingItemLayout"
        android:layout_marginTop="16dp">

        <ImageView
            style="@style/SettingItemIcon"
            android:src="@mipmap/icon_setting" />

        <TextView
            style="@style/SettingItemLabel"
            android:text="设置" />

        <TextView style="@style/SettingItemDes" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_arrow_right" />

    </LinearLayout>

</LinearLayout>