<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@mipmap/bg_user"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/selector_switch_company"
                android:clickable="true"
                android:drawablePadding="2dp"
                android:drawableRight="@mipmap/icon_exchange"
                android:focusable="true"
                android:paddingBottom="1dp"
                android:paddingLeft="6dp"
                android:paddingRight="4dp"
                android:paddingTop="3dp"
                android:text="切换账号"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <com.ten.tencloud.widget.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/icon_userphoto" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_899ab6"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_certification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/icon_idcard_off" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text_color_556278"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <LinearLayout
        android:id="@+id/ll_company"
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:background="@color/bg_232730"
        android:orientation="vertical">

        <LinearLayout style="@style/SettingItemLayout">

            <ImageView
                style="@style/SettingItemIcon"
                android:src="@mipmap/icon_company" />

            <TextView
                style="@style/SettingItemLabel"
                android:text="我的公司" />

            <TextView
                android:id="@+id/tv_company_des"
                style="@style/SettingItemDes"
                android:text="0家公司" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_color_2f3543" />

    </LinearLayout>

    <LinearLayout style="@style/SettingItemLayout">

        <ImageView
            android:id="@+id/iv_icon"
            style="@style/SettingItemIcon"
            android:src="@mipmap/icon_service" />

        <TextView
            android:id="@+id/tv_label"
            style="@style/SettingItemLabel"
            android:text="客服服务" />

        <TextView
            android:id="@+id/tv_des"
            style="@style/SettingItemDes" />


        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_arrow_right" />

    </LinearLayout>

    <LinearLayout
        style="@style/SettingItemLayout"
        android:layout_marginTop="16dp">

        <ImageView
            style="@style/SettingItemIcon"
            android:src="@mipmap/icon_setting" />

        <TextView
            style="@style/SettingItemLabel"
            android:text="设置" />

        <TextView style="@style/SettingItemDes" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_arrow_right" />

    </LinearLayout>

</LinearLayout>