<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82.5dp"
        android:background="@color/bg_232730"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_avatar"
            style="@style/SettingItemLayout"
            android:layout_height="82dp">

            <TextView
                style="@style/SettingItemLabel"
                android:layout_weight="1"
                android:text="头像" />

            <com.ten.tencloud.widget.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/icon_userphoto" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_color_2f3543" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:background="@color/bg_232730"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_name"
            style="@style/SettingItemLayout">

            <TextView
                style="@style/SettingItemLabel"
                android:text="姓名" />

            <TextView
                android:id="@+id/tv_name_des"
                style="@style/SettingItemDes" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_color_2f3543" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:background="@color/bg_232730"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_autonym"
            style="@style/SettingItemLayout">

            <TextView
                style="@style/SettingItemLabel"
                android:text="是否实名" />

            <TextView
                android:id="@+id/tv_autonym_des"
                style="@style/SettingItemDes"
                android:text="未实名" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_color_2f3543" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:background="@color/bg_232730"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_email"
            style="@style/SettingItemLayout">

            <TextView
                style="@style/SettingItemLabel"
                android:text="邮箱" />

            <TextView
                android:id="@+id/tv_email_des"
                style="@style/SettingItemDes" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_color_2f3543" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:background="@color/bg_232730"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_gender"
            style="@style/SettingItemLayout">

            <TextView
                style="@style/SettingItemLabel"
                android:text="性别" />

            <TextView
                android:id="@+id/tv_gender_des"
                style="@style/SettingItemDes" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_color_2f3543" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:background="@color/bg_232730"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_birth"
            style="@style/SettingItemLayout">

            <TextView
                style="@style/SettingItemLabel"
                android:text="生日" />

            <TextView
                android:id="@+id/tv_birth_des"
                style="@style/SettingItemDes" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_2f3543" />

    </LinearLayout>


</LinearLayout>
