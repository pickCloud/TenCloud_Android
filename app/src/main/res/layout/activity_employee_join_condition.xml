<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:background="@color/bg_232730"
        android:orientation="vertical">

        <LinearLayout style="@style/SettingItemLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:alpha="0.5"
                android:src="@mipmap/icon_checkbox_bluecircle_on" />

            <TextView
                style="@style/SettingItemLabel"
                android:text="手机" />

            <TextView
                style="@style/SettingItemDes"
                android:gravity="left"
                android:text="*  手机为必选项" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_color_2f3543" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:background="@color/bg_232730"
        android:orientation="vertical">

        <LinearLayout style="@style/SettingItemLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:alpha="0.5"
                android:src="@mipmap/icon_checkbox_bluecircle_on" />

            <TextView
                style="@style/SettingItemLabel"
                android:text="姓名" />

            <TextView
                style="@style/SettingItemDes"
                android:gravity="left"
                android:text="*  姓名为必选项" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_color_2f3543" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48.5dp"
        android:background="@color/bg_232730"
        android:orientation="vertical">

        <LinearLayout style="@style/SettingItemLayout">

            <CheckBox
                android:id="@+id/cb_id_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:button="@drawable/selector_check_box" />

            <TextView
                style="@style/SettingItemLabel"
                android:text="身份证" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color_2f3543" />

</LinearLayout>