<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_common_dialog_button"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/TextColor899AB6.14sp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="计费规则说明" />

    <TextView
        style="@style/TextColor556278.14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:lineSpacingExtra="4sp"
        android:text="计费每小时一个计费单位，整点计算，从账户余额中扣款；\n每小时计费总费用=CPU费用+内存费用+数据盘费用+公网宽带费用" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color_3f4656" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_common_dialog_button"
            android:gravity="center"
            android:text="知道了"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>